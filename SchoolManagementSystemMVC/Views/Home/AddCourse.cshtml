@{
    ViewData["Title"] = "AddCourse";
}
<style>
    body {
        background-color: blanchedalmond;
    }
</style>
<form method="post" asp-controller="Home" asp-action="AddCourse">
    <fieldset>
        <legend>Add Course</legend>
        <div>
            <label for="coursename">Course Name:</label>
            <input type="text" name="CourseName" value="" />
            @Html.ValidationMessage("coursename")
        </div>
        <div>
            <label for="affilaitedby">Affiliated By:</label>
            <input type="text" name="AffiliatedBY" value="" />
            @Html.ValidationMessage("affilaitedby")
        </div>
        <div>
            <label>&nbsp;</label>
            <input type="submit" value="Submit" class="submit" />
        </div>
    </fieldset>
</form>  